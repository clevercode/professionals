%section.dark-banner
  .stitched-border
  .wrapper
    - @answers.each do |answer|
      = link_to answer do
        %h1= answer.question
        %p= truncate answer.content, length: 80
  .stitched-border

%section.content
  .wrapper
    %h1 Where would you like to start?
    .categories
      - Category.all.each do |category|
        .category= link_to category.title, category_articles_path(category)

    - @articles.each do |article|
      %article
        %h1= article.title
        .markdown
          %p= redcarpet truncate article.content, length: 400
        = link_to 'Read More Â»', article

